<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.presentlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PresentList">
        <activity android:name=".GroceryList.ShowGroceryListActivity"></activity>
        <activity android:name=".GroceryList.GroceryListEntryActivity" />
        <activity android:name=".ToDoList.ToDoListEntryActivity" />
        <activity android:name=".ToDoList.ShowToDoListActivity" />
        <activity android:name=".MainMenu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>